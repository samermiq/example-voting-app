pipeline {
    agent any
    
    tools{
      maven 'Maven 3.6.1'
    }
    stages{
        stage('build'){
            when{
            changeset "**/worker/**"
            }
            steps{
            echo 'Compiling worker app'   
            dir('worker'){
            sh 'mvn compile'
             }
            }
        }
        stage('test'){
            when{
            changeset "**/worker/**"
            }
            steps{
            echo 'running unit test'
            dir('worker'){
            sh 'mvn clean test'
             }
            }
        }
        stage('Package'){
            when{
            branch 'master'
            changeset "**/worker/**" 
            }
            steps{
            echo 'package worker app'
            dir('worker'){
            sh 'mvn package -DskipTests'
            archiveArtifacts artifacts: '**/target/*.jar', fingerprint: true
             }
            }
        }
    }
    post{
        always{
            echo 'build pipeline for worker is complete'
        }
    }
}
